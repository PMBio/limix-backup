
#get all the build variables we need
Import('env','nlopt','build_options')
localenv = env.Clone()

srclst = Glob('*/*.cpp')

#srclst
localenv.Depends(srclst, [nlopt])

if build_options['with_vcf']:
   srclst.extend(Glob('io/vcf/*.cpp'))
   srclst.extend(Glob('io/vcf/*/*.cpp'))

lib=localenv.StaticLibrary('limix',srclst)
Return('lib')